doctype html
html(lang="en")
  head
    include ./include/head.jade

  body
    div.container
      img.img-responsive.logo(src="/images/logo.png" alt="Ready to Get Friskie?")
    
    div.container
      form.form-signin
        h2 Please sign in
        div.email
          label.sr-only(for="inputEmail") Email address
          input.form-control(id="inputEmail" type="email" placeholder="Email address")
        div.password
          label.sr-only(for="inputPassword") Password
          input.form-control(id="inputPassword" type="password" placeholder="Password")
        div.remember-me
          input(id="rememberMe" type="checkbox")
          label(for="rememberMe") Remember Me
      
        button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign In
        
